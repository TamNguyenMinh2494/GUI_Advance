<Page x:Class="FinalEx.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FinalEx"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1"
      Loaded="Page_Loaded">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lbShippers" Style="{StaticResource lbStyle}"
               Grid.Column="0" Grid.Row="0" Content="Shippers" 
              />
        <ListBox x:Name="lbxItems" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="1" Grid.RowSpan="3"
                 />
        <Button x:Name="btViewOrders" Click="BtViewOrders_Click"
                Style="{StaticResource btHandlers}"
                Grid.Column="0" Grid.Row="4" 
                Grid.ColumnSpan="1" Content="View Orders"/>
    </Grid>
</Page>
